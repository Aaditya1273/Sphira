# Sphira DeFi Platform Environment Configuration
# Copy this file to .env.local and update the values

# =============================================================================
# BLOCKCHAIN NETWORK CONFIGURATION
# =============================================================================

# Somnia Network RPC Configuration
SOMNIA_TESTNET_RPC_URL=https://dream-rpc.somnia.network/
NEXT_PUBLIC_SOMNIA_RPC_URL=https://dream-rpc.somnia.network/

# Private Key for deployment and transactions (NEVER commit this to git)
PRIVATE_KEY=your_private_key_here_without_0x_prefix

# Somnia API Key (if required)
SOMNIA_API_KEY=your_somnia_api_key_here
GEMINI_API-KEY=

# =============================================================================
# NEXT.JS APPLICATION CONFIGURATION
# =============================================================================

# Application URLs
NEXT_PUBLIC_API_URL=http://localhost:3000/api
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Chain Configuration
NEXT_PUBLIC_CHAIN_ID=50312
NEXT_PUBLIC_CHAIN_NAME=Somnia Testnet
NEXT_PUBLIC_CHAIN_SYMBOL=STT
NEXT_PUBLIC_CHAIN_DECIMALS=18

# =============================================================================
# WALLET & WEB3 CONFIGURATION
# =============================================================================

# WalletConnect Project ID (get from https://cloud.walletconnect.com/)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id

# Alchemy/Infura API Keys (if using as backup RPC)
NEXT_PUBLIC_ALCHEMY_API_KEY=your_alchemy_api_key
NEXT_PUBLIC_INFURA_API_KEY=your_infura_api_key

# =============================================================================
# SMART CONTRACT ADDRESSES
# =============================================================================

# Main Contract Addresses (update after deployment)
NEXT_PUBLIC_SIP_MANAGER_ADDRESS=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_YIELD_ROUTER_ADDRESS=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_LOCK_VAULT_ADDRESS=0x0000000000000000000000000000000000000000

# Token Contract Addresses
NEXT_PUBLIC_USDC_ADDRESS=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_SOM_ADDRESS=0x0000000000000000000000000000000000000000

# =============================================================================
# DATABASE CONFIGURATION (for production)
# =============================================================================

# Database URL (PostgreSQL recommended)
DATABASE_URL=postgresql://username:password@localhost:5432/sphira_db

# Redis URL (for caching and sessions)
REDIS_URL=redis://localhost:6379

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Analytics & Monitoring
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your_vercel_analytics_id
SENTRY_DSN=your_sentry_dsn

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================

# Environment Mode
NODE_ENV=development

# Enable/Disable Features
NEXT_PUBLIC_ENABLE_TESTNET=true
NEXT_PUBLIC_ENABLE_MOCK_DATA=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Gas Reporting (for Hardhat)
REPORT_GAS=true
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key

# =============================================================================
# SECURITY & AUTHENTICATION (Wallet-Only)
# =============================================================================

# Wallet-based authentication only
NEXT_PUBLIC_AUTH_METHOD=wallet
NEXT_PUBLIC_REQUIRE_WALLET_CONNECTION=true

# JWT Secret for API authentication (for wallet signatures)
JWT_SECRET=your_super_secret_jwt_key_here

# API Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# =============================================================================
# LOGGING & MONITORING
# =============================================================================

# Log Level (error, warn, info, debug)
LOG_LEVEL=info

# Enable Debug Mode
DEBUG=false

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Deployment Network (testnet, mainnet)
DEPLOYMENT_NETWORK=testnet

# Gas Price Settings (in gwei)
GAS_PRICE=20
MAX_FEE_PER_GAS=30
MAX_PRIORITY_FEE_PER_GAS=2

# Contract Verification
ETHERSCAN_API_KEY=your_etherscan_api_key
VERIFY_CONTRACTS=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/Disable specific features
NEXT_PUBLIC_ENABLE_CHAT=true
NEXT_PUBLIC_ENABLE_EMERGENCY_VAULT=true
NEXT_PUBLIC_ENABLE_YIELD_FARMING=true
NEXT_PUBLIC_ENABLE_EMAIL_NOTIFICATIONS=false

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================

# Price Feed APIs
COINGEMINI_API_KEY=your_gemini_api_key_hereey_here
CHAINLINK_API_KEY=your_chainlink_api_key

# Social & Communication
DISCORD_WEBHOOK_URL=your_discord_webhook_url
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id
