# Sphira DeFi Platform - Production Environment
# Add these variables in Netlify Dashboard: Site settings > Environment variables

# =============================================================================
# REQUIRED FOR DEPLOYMENT
# =============================================================================

# WalletConnect Project ID (get from https://cloud.walletconnect.com/)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id

# Gemini AI API Key (for chat functionality)
GEMINI_API_KEY=your_gemini_api_key_here

# =============================================================================
# BLOCKCHAIN CONFIGURATION
# =============================================================================

# Somnia Network Configuration
NEXT_PUBLIC_CHAIN_ID=2648
NEXT_PUBLIC_CHAIN_NAME=Somnia Testnet
NEXT_PUBLIC_CHAIN_SYMBOL=SOM
NEXT_PUBLIC_CHAIN_DECIMALS=18

# RPC URLs
SOMNIA_TESTNET_RPC_URL=https://testnet-rpc.somnia.network
NEXT_PUBLIC_SOMNIA_RPC_URL=https://testnet-rpc.somnia.network

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Production URLs (update with your Netlify domain)
NEXT_PUBLIC_API_URL=https://your-app-name.netlify.app/api
NEXT_PUBLIC_APP_URL=https://your-app-name.netlify.app

# Environment Mode
NODE_ENV=production

# Feature Flags
NEXT_PUBLIC_ENABLE_TESTNET=true
NEXT_PUBLIC_ENABLE_MOCK_DATA=false
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_CHAT=true
NEXT_PUBLIC_ENABLE_EMERGENCY_VAULT=true
NEXT_PUBLIC_ENABLE_YIELD_FARMING=true

# =============================================================================
# OPTIONAL INTEGRATIONS
# =============================================================================

# Analytics (optional)
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your_vercel_analytics_id

# External APIs (optional)
NEXT_PUBLIC_ALCHEMY_API_KEY=your_alchemy_api_key
COINGECKO_API_KEY=your_coingecko_api_key

# =============================================================================
# SECURITY
# =============================================================================

# JWT Secret for API authentication
JWT_SECRET=your_super_secret_jwt_key_here

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000
